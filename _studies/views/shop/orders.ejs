<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length <=0) { %>
            <h1>No Orders!</h1>
            <% } else { %>
                <ul>
                     <%  orders.forEach(order => { %> 
                        <li>
                            <h2># <%=order._id %></h2>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li><%= product.product.title %> (<%=product.quantity %>)</li>
                                <% }); %>
                            </ul>
                        </li>
                     <% }); %>

                </ul>
            <% } %>


        </main>
        <%- include('../includes/end.ejs') %>